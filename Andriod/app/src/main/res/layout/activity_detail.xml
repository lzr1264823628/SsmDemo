<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <EditText
        android:id="@+id/editTextStuName"
        android:layout_width="331dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/editTextStuNum"
        app:layout_constraintEnd_toStartOf="@+id/guideline9" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:editable="true"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupGender"
        app:layout_constraintEnd_toStartOf="@+id/guideline9" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="性别"
        app:layout_constraintBottom_toBottomOf="@+id/radioGroupGender"
        app:layout_constraintEnd_toStartOf="@+id/guideline10"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/radioGroupGender"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/radioGroupGender"
        android:layout_width="129dp"
        android:layout_height="34dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="52dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9">

        <RadioButton
            android:id="@+id/radioBtnMale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="男" />

        <RadioButton
            android:id="@+id/radioBtnFemale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="女" />
    </RadioGroup>

    <EditText
        android:id="@+id/editTextDepartment"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/editTextImageUrl"
        app:layout_constraintEnd_toStartOf="@+id/guideline9" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="学号"
        app:layout_constraintBottom_toBottomOf="@+id/editTextStuNum"
        app:layout_constraintEnd_toStartOf="@+id/editTextStuNum"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/editTextStuNum"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图片路径"
        app:layout_constraintBottom_toBottomOf="@+id/editTextImageUrl"
        app:layout_constraintEnd_toStartOf="@+id/editTextImageUrl"
        app:layout_constraintTop_toTopOf="@+id/editTextImageUrl" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        app:layout_constraintBottom_toBottomOf="@+id/editTextPhone"
        app:layout_constraintEnd_toStartOf="@+id/editTextPhone"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/editTextPhone"
        app:layout_constraintVertical_bias="0.346" />

    <EditText
        android:id="@+id/editTextDorm"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:editable="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/editTextPhone"
        app:layout_constraintEnd_toStartOf="@+id/guideline9" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="班级"
        app:layout_constraintBottom_toBottomOf="@+id/editTextClass"
        app:layout_constraintEnd_toStartOf="@+id/editTextClass"
        app:layout_constraintTop_toTopOf="@+id/editTextClass" />

    <EditText
        android:id="@+id/editTextStuNum"
        android:layout_width="331dp"
        android:layout_height="44dp"
        android:editable="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/editTextClass"
        app:layout_constraintEnd_toStartOf="@+id/guideline9" />

    <EditText
        android:id="@+id/editTextClass"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/editTextDepartment"
        app:layout_constraintEnd_toStartOf="@+id/guideline9" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宿舍"
        app:layout_constraintBottom_toBottomOf="@+id/editTextDorm"
        app:layout_constraintEnd_toStartOf="@+id/editTextDorm"
        app:layout_constraintTop_toTopOf="@+id/editTextDorm" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="52dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:text="姓名"
        app:layout_constraintBottom_toBottomOf="@+id/editTextStuName"
        app:layout_constraintEnd_toStartOf="@+id/editTextStuName"
        app:layout_constraintTop_toTopOf="@+id/editTextStuName"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专业"
        app:layout_constraintBottom_toBottomOf="@+id/editTextDepartment"
        app:layout_constraintEnd_toStartOf="@+id/editTextDepartment"
        app:layout_constraintTop_toTopOf="@+id/editTextDepartment" />

    <EditText
        android:id="@+id/editTextImageUrl"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:editable="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/editTextDorm"
        app:layout_constraintEnd_toStartOf="@+id/guideline9" />

    <ImageView
        android:id="@+id/stuImageView"
        android:layout_width="256dp"
        android:layout_height="216dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextStuName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ProgressBar
        android:id="@+id/imageProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/stuImageView"
        app:layout_constraintEnd_toEndOf="@+id/stuImageView"
        app:layout_constraintStart_toStartOf="@+id/stuImageView"
        app:layout_constraintTop_toTopOf="@+id/stuImageView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="395dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="64dp" />

</androidx.constraintlayout.widget.ConstraintLayout>